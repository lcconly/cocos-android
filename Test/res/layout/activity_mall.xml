<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    
    
    <RelativeLayout
        android:id="@+id/mall_bg"
        android:layout_width="500dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >
        <TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:layout_marginLeft="31dp"
        	android:layout_marginTop="21dp"
        	android:text="@string/mall"
        	android:textColor="#ba0a07" />

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="64dp"
            android:layout_toLeftOf="@+id/button2"
            android:background="@drawable/button_bought" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="37dp"
            android:background="@drawable/button_used" />

        <Button
            android:id="@+id/button3"
            android:layout_width="82dp"
            android:layout_height="30dp"
            android:layout_below="@+id/button2"
            android:layout_marginRight="30dp"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/button2"
            android:background="@drawable/button_buy" />

        <Button
            android:id="@+id/button4"
            android:layout_width="82dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/button3"
            android:layout_alignBottom="@+id/button3"
            android:layout_alignLeft="@+id/button2"
            android:background="@drawable/button_use" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/theme_1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button3"
            android:layout_alignBottom="@+id/button3"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/theme_2" />

    </RelativeLayout>

</RelativeLayout>